.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  margin-top: auto;
  /* 使容器尽可能靠底部 */
}
.container .title {
  display: flex;
  align-items: center;
  margin: 40rpx;
}
.container .title text {
  font-size: 15px;
  color: gray;
}
.container .avatar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 40rpx;
}
.container .avatar .avatartext {
  flex: 1;
}
.container .avatar .avatarbtn {
  width: 100rpx;
  height: 100rpx;
  padding: 0;
  /* 清除按钮默认的内边距 */
  border-radius: 30px;
}
.container .avatar .avatarbtn .avatarImage {
  width: 100%;
  height: 100%;
}
.container .account {
  display: flex;
  justify-content: space-between;
  margin: 40rpx;
}
.container .name-container {
  display: flex;
  justify-content: space-between;
  padding: 40rpx;
}
.container .name-container .nameText {
  flex: 1;
}
.container .name-container .name-input {
  width: 300rpx;
  text-align: right;
}
.container .divider {
  width: 100%;
  /* 横线宽度占满父容器 */
  height: 1px;
  /* 横线高度 */
  background-color: #E0E0E0;
  /* 横线颜色 */
  margin-top: 10rpx;
  /* 分隔线与上方元素的距离 */
  margin-bottom: 10rpx;
  /* 分隔线与下方元素的距离 */
}
.container .advice {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 40rpx;
}
.container .btn {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}
.container .btn .btn-save {
  width: 200rpx;
  font-size: 14px;
  border-radius: 30px;
  background-color: #FFE100;
  border-style: solid;
  border-width: 1px;
}
.container .btn .btn-cancel {
  width: 200rpx;
  font-size: 14px;
  border-radius: 30px;
  background-color: lightgray;
  border-style: solid;
  border-width: 1px;
}
.container .logoutbtn {
  border-radius: 40rpx;
  border: #000000;
  margin-top: auto;
  margin-bottom: 100rpx;
  background-color: #FFE100;
  border-radius: 30px;
  border-style: solid;
  border-width: 1px;
  width: 400rpx;
  font-size: 14px;
}